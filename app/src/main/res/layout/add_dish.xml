<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDD684">

    <!-- Tyler - Can you make the "this" become whatever Recipe we're in? -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add this to Meal Plan"
        android:id="@+id/tvAddRecipe"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="32dp"
        android:textColor="#0A300A" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:id="@+id/radioButton"
                android:checked="false"
                android:layout_column="2"
                android:textSize="22dp"
                android:layout_marginBottom="15dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:id="@+id/radioButton5"
                android:checked="false"
                android:layout_column="4"
                android:textSize="22dp"
                android:layout_marginBottom="15dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_column="2"
                android:textSize="22dp"
                android:layout_marginBottom="15dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:id="@+id/radioButton6"
                android:checked="false"
                android:layout_column="4"
                android:textSize="22dp"
                android:layout_marginBottom="15dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:layout_column="2"
                android:textSize="22dp"
                android:layout_marginBottom="15dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:id="@+id/radioButton7"
                android:checked="false"
                android:layout_column="4"
                android:textSize="22dp"
                android:layout_marginBottom="15dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:id="@+id/radioButton4"
                android:checked="false"
                android:layout_column="2"
                android:textSize="22dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/generalGrid"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time:"
            android:id="@+id/textView7"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="24dp"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Servings:"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="24dp" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_row="1"
            android:layout_column="0" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="10dp" />

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Meal Plan!"
        android:id="@+id/addrecipe"
        android:layout_gravity="center_horizontal"
        android:textColor="#F6FFE0"
        android:background="#0A300A"
        android:textSize="24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp" />

</LinearLayout>